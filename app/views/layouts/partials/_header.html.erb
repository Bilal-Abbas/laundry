              <li class="nav-item">
                <a class="nav-link scroll" href="#about">about</a>
              </li>
            <% end %>
          <li class="nav-item">
            <a class="nav-link scroll" href="#contact">contact</a>
          </li>
        </ul>
        <button type="button" class="btn btn-info btn-lg-block w3ls-btn px-4 text-uppercase font-weight-bold" data-toggle="modal"
            aria-pressed="false" data-target="#exampleModal">
          order
        </button>
      </div>
    </nav>
  </div>
</header>

<script type="text/javascript">
  if(<%= action_name == "pricing" %>){
    $(".navbar-nav .active").removeClass("active")
    $(".navbar-nav #pricing-nav-link").addClass("active")
  }else if(<%= controller_name == "service" %>){
    $(".navbar-nav .active").removeClass("active")
    $(".navbar-nav .services-nav-link").addClass("active")
  }
</script>